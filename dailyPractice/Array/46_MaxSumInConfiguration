https://practice.geeksforgeeks.org/problems/max-sum-in-the-configuration/1


int max_sum(int arr[],int n)
{
    int sum=0,sum2=0,res=INT_MIN;
    for(int i=0; i<n; i++){
        sum+=arr[i]*i;
        sum2+=arr[i];
    }
    res=max(res,sum);
    for(int i=0; i<n; i++){
        sum = sum - (sum2-arr[i]) + arr[i] * (n-1);
        res=max(res,sum);
    }
    return res;
}
