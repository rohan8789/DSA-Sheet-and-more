int smallestSubWithSum(int arr[], int n, int x)
{
    // Your code goes here
    int j=0,f=0,ans=INT_MAX,s=0;
    for(int i=0; i<n; i++){
        s+=arr[i];
        while(s>x){
            s-=arr[j++];
            f=1;
        }
        if(f==1){
            //cout<<i<<" "<<j<<endl;
            ans=min(ans,i-j+2);
        }
    }
    return ans;
}
