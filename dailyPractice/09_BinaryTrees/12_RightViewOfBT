Intuition:- Do level order traversal and push last iteration item to stack from each vector iteration


Iterative approach:-
class Solution
{
    public:
    vector<int> rightView(Node *root)
    {
        vector<int>v;
        queue<Node*>q;
        q.push(root);
        while(!q.empty()){
            int n=q.size();
            for(int i=0; i<n; ++i){
                Node* front=q.front();
                q.pop();
                if(i==n-1){
                    v.push_back(front->data);
                }
                if(front->left){
                    q.push(front->left);
                }
                if(front->right){
                    q.push(front->right);
                }
            }
        }
        return v;
    }
};
