class Solution{
public:
    int kthLargest(vector<int> &arr,int n,int k){
        priority_queue<int, vector<int>, greater<int>>pq;
        for(int i=0; i<n; i++){
            int s=0;
            for(int j=i; j<n; j++){
                s=s+arr[j];
                pq.push(s);
                if(pq.size()>k){
                    pq.pop();
                }
            }
        }
        return pq.top();
    }
};
