

Node* insert(int k, int val, Node *head) {
	Node* temp=head;
	Node* freshNode = new Node(val);
	int c=1;
	while(temp->next!=head){
		if(c>=k&&k!=0)break;
		temp=temp->next;
		c++;
	}
	if(k==0){
		freshNode->next=head;
		head=freshNode;
		temp->next=head;
		return head;
	}
	Node* a=temp->next;
	temp->next=freshNode;
	freshNode->next=a;
	return head;
}
